    <footer class="border-t border-slate-200 mt-auto py-8 bg-white/50 backdrop-blur-sm">
        <div
            class="max-w-7xl mx-auto px-6 lg:px-12 flex flex-col md:flex-row justify-between items-center gap-4 text-sm">
            <p class="text-slate-500">Generated for <strong class="text-slate-700">bhealth.shop</strong> · Google Ads
                Account Audit · Feb 1–24, 2026</p>
            <div class="flex items-center gap-2 text-slate-400 font-bold tracking-widest uppercase text-xs">
                <i data-lucide="activity" class="w-4 h-4 text-indigo-500"></i> Ad-Lab.io Internal
            </div>
        </div>
    </footer>

    <script>
        lucide.createIcons();

        // ── Tab switching ──
        function switchTab(tabId, event) {
            document.querySelectorAll('.tab-content').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
            document.getElementById('panel-' + tabId).classList.add('active');
            if (event && event.currentTarget) event.currentTarget.classList.add('active');
            if (tabId === 'campaigns' && !chartsRendered) { renderCharts(); chartsRendered = true; }
            if (tabId === 'technical') renderConversionTable();
            animateScoreBars();
        }

        // ── Number animation ──
        function animateNumbers() {
            document.querySelectorAll('.animate-number').forEach(el => {
                const val = parseFloat(el.getAttribute('data-val'));
                const decimals = parseInt(el.getAttribute('data-decimals') || 0);
                let current = 0;
                const steps = 60, duration = 1400, stepTime = duration / steps, increment = val / steps;
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= val) { current = val; clearInterval(timer); }
                    el.innerText = current.toLocaleString('en-US', { minimumFractionDigits: decimals, maximumFractionDigits: decimals });
                }, stepTime);
            });
        }

        // ── Score bar animation ──
        function animateScoreBars() {
            document.querySelectorAll('.score-bar-fill').forEach(el => {
                const target = el.getAttribute('data-target');
                if (target) {
                    setTimeout(() => { el.style.width = target; }, 100);
                }
            });
        }

        // ── Gauge ──
        window.addEventListener('DOMContentLoaded', () => {
            setTimeout(() => {
                const circle = document.getElementById('healthCircle');
                // 6.2/10 = 62% → dashoffset = 264 * (1 - 0.62) = 100.32
                circle.style.strokeDashoffset = '100.32';
                animateNumbers();
                animateScoreBars();
            }, 300);
        });

        // ── Chart.js defaults ──
        Chart.defaults.color = '#64748b';
        Chart.defaults.font.family = '"Plus Jakarta Sans", sans-serif';
        Chart.defaults.plugins.tooltip.backgroundColor = 'rgba(255,255,255,0.95)';
        Chart.defaults.plugins.tooltip.titleColor = '#0f172a';
        Chart.defaults.plugins.tooltip.bodyColor = '#334155';
        Chart.defaults.plugins.tooltip.borderColor = 'rgba(0,0,0,0.1)';
        Chart.defaults.plugins.tooltip.borderWidth = 1;
        Chart.defaults.plugins.tooltip.padding = 12;
        Chart.defaults.plugins.tooltip.cornerRadius = 8;
        Chart.defaults.plugins.tooltip.displayColors = false;

        let chartsRendered = false;

        const campaigns = [
            { name: 'Brand | Search (TIS 95)', strategy: 'TARGET_IMPRESSION_SHARE', spend: 258.30, conv: 14.00, val: 7270.27, cpa: 18.45, roas: 28.14 },
            { name: 'PMax | AE | Prospecting (MCV)', strategy: 'MAXIMIZE_CONV_VALUE', spend: 8523.51, conv: 54.20, val: 29106.63, cpa: 157.27, roas: 3.41 },
            { name: 'PMax | SA/AE | Competitor (MCV)', strategy: 'MAXIMIZE_CONV_VALUE', spend: 6679.26, conv: 32.67, val: 14262.02, cpa: 204.48, roas: 2.14 },
            { name: 'PMax | SA/AE | Remarketing (MCV)', strategy: 'MAXIMIZE_CONV_VALUE', spend: 5347.00, conv: 28.28, val: 11883.24, cpa: 189.07, roas: 2.22 },
            { name: 'PMax | SA | Prospecting (tROAS)', strategy: 'MAXIMIZE_CONV_VALUE', spend: 1410.77, conv: 5.00, val: 2182.46, cpa: 282.15, roas: 1.55 },
            { name: 'PMax FO | Non-Performers (tROAS)', strategy: 'MAXIMIZE_CONV_VALUE', spend: 374.01, conv: 2.04, val: 1040.31, cpa: 183.34, roas: 2.78 },
            { name: 'Vitamins & Food Supplements', strategy: 'TARGET_SPEND', spend: 0, conv: 0, val: 0, cpa: 0, roas: 0 },
        ];

        function roasBadge(roas) {
            if (roas === 0) return 'roas-badge-zero';
            if (roas >= 10) return 'roas-badge-high';
            if (roas >= 2) return 'roas-badge-mid';
            return 'roas-badge-low';
        }

        function renderCampaignTable() {
            const tbody = document.getElementById('campaignTableBody');
            campaigns.forEach(c => {
                const badge = roasBadge(c.roas);
                const roasText = c.roas === 0 ? '—' : c.roas.toFixed(2) + 'x';
                const cpaText = c.cpa === 0 ? '—' : '$' + c.cpa.toFixed(2);
                tbody.innerHTML += `
          <tr class="campaign-row">
            <td class="px-5 py-4 font-semibold text-slate-800 max-w-[220px] truncate">${c.name}</td>
            <td class="px-5 py-4"><span class="text-[10px] font-mono text-slate-500 bg-slate-50 border border-slate-200 px-2 py-0.5 rounded">${c.strategy}</span></td>
            <td class="px-5 py-4 text-right font-mono text-slate-600">$${c.spend.toLocaleString('en-US', { minimumFractionDigits: 2 })}</td>
            <td class="px-5 py-4 text-right font-mono text-slate-600">${c.conv.toFixed(2)}</td>
            <td class="px-5 py-4 text-right font-mono text-slate-600">$${c.val.toLocaleString('en-US', { minimumFractionDigits: 2 })}</td>
            <td class="px-5 py-4 text-right font-mono text-slate-600">${cpaText}</td>
            <td class="px-5 py-4 text-right"><span class="inline-block px-2.5 py-1 rounded-full text-xs font-bold font-display ${badge}">${roasText}</span></td>
          </tr>`;
            });
        }
        renderCampaignTable();

        function renderConversionTable() {
            const tbody = document.getElementById('conversionTableBody');
            if (tbody.children.length > 0) return;
            const actions = [
                { id: '745960319', status: 'ENABLED' },
                { id: '746581837', status: 'ENABLED' },
                { id: '746581912', status: 'ENABLED' },
                { id: '746610234', status: 'ENABLED' },
                { id: '746610432', status: 'ENABLED' },
                { id: '755527357', status: 'ENABLED' },
                { id: '766868840', status: 'ENABLED' },
                { id: '773997256', status: 'ENABLED' },
                { id: '773998783', status: 'HIDDEN' },
                { id: '796110155', status: 'REMOVED' },
                { id: '797824050', status: 'ENABLED' },
                { id: '797824053', status: 'ENABLED' },
                { id: '837183253', status: 'ENABLED' },
                { id: '894830304', status: 'ENABLED' },
                { id: '6501404807', status: 'REMOVED' },
                { id: '6591598506', status: 'HIDDEN' },
                { id: '6591598509', status: 'ENABLED' },
                { id: '6591598512', status: 'ENABLED' },
                { id: '6713115838', status: 'ENABLED' },
                { id: '6713115961', status: 'ENABLED' },
                { id: '6713115964', status: 'ENABLED' },
                { id: '6713115967', status: 'ENABLED' },
                { id: '6713115970', status: 'ENABLED' },
                { id: '6713115973', status: 'ENABLED' },
                { id: '6713115976', status: 'ENABLED' },
                { id: '6713207981', status: 'ENABLED' },
                { id: '6740167433', status: 'REMOVED' },
                { id: '6744773644', status: 'ENABLED' },
            ];
            actions.forEach(a => {
                let pill = '';
                if (a.status === 'ENABLED') pill = `<span class="pill-ok    inline-flex px-2.5 py-1 rounded-full text-xs font-bold">● Enabled</span>`;
                if (a.status === 'HIDDEN') pill = `<span class="pill-hidden inline-flex px-2.5 py-1 rounded-full text-xs font-bold">◐ Hidden</span>`;
                if (a.status === 'REMOVED') pill = `<span class="pill-neutral inline-flex px-2.5 py-1 rounded-full text-xs font-bold">✕ Removed</span>`;
                tbody.innerHTML += `<tr class="issue-row"><td class="px-5 py-4 font-mono text-slate-500 text-xs">customers/3850935442/conversionActions/${a.id}</td><td class="px-5 py-4 text-center">${pill}</td></tr>`;
            });
        }

        function renderCharts() {
            // Short labels for charts
            const labels = [
                'Brand Search',
                'PMax Prospect',
                'PMax Competitor',
                'PMax Remarket',
                'PMax SA Prosp.',
                'PMax Non-Perf.',
                'Vitamins (SC)',
            ];

            // 1. Spend vs Value grouped bar
            new Chart(document.getElementById('spendValueChart'), {
                type: 'bar',
                data: {
                    labels,
                    datasets: [
                        { label: 'Spend ($)', data: [258.30, 8523.51, 6679.26, 5347.00, 1410.77, 374.01, 0], backgroundColor: '#6366f1', borderRadius: 4 },
                        { label: 'Conv. Value ($)', data: [7270.27, 29106.63, 14262.02, 11883.24, 2182.46, 1040.31, 0], backgroundColor: '#10b981', borderRadius: 4 },
                    ]
                },
                options: {
                    responsive: true, maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    plugins: { legend: { position: 'bottom', labels: { usePointStyle: false, boxWidth: 28, padding: 16 } } },
                    scales: {
                        x: { grid: { display: false }, ticks: { font: { size: 10 }, maxRotation: 30 } },
                        y: { grid: { color: 'rgba(0,0,0,0.04)' }, ticks: { callback: v => '$' + v.toLocaleString() } }
                    }
                }
            });

            // 2. ROAS horizontal bar
            const roasData = [28.14, 3.41, 2.14, 2.22, 1.55, 2.78, 0];
            new Chart(document.getElementById('roasChart'), {
                type: 'bar',
                data: {
                    labels,
                    datasets: [{
                        label: 'ROAS',
                        data: roasData,
                        backgroundColor: roasData.map(v => v >= 10 ? '#10b981' : v >= 2 ? '#6366f1' : v > 0 ? '#f97316' : '#cbd5e1'),
                        borderRadius: 4
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true, maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: { grid: { color: 'rgba(0,0,0,0.04)', borderDash: [4, 4] }, ticks: { callback: v => v + 'x' } },
                        y: { grid: { display: false }, ticks: { font: { size: 10 } } }
                    }
                }
            });

            // 3. Spend share donut
            new Chart(document.getElementById('spendShareChart'), {
                type: 'doughnut',
                data: {
                    labels: ['PMax Prospecting AE', 'PMax Competitor', 'PMax Remarketing', 'PMax Prosp. SA', 'PMax Non-Perf.', 'Brand Search'],
                    datasets: [{
                        data: [8523.51, 6679.26, 5347.00, 1410.77, 374.01, 258.30],
                        backgroundColor: ['#6366f1', '#f97316', '#10b981', '#8b5cf6', '#64748b', '#fbbf24'],
                        borderWidth: 0,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true, maintainAspectRatio: false,
                    cutout: '72%',
                    plugins: {
                        legend: { position: 'bottom', labels: { padding: 12, usePointStyle: true, pointStyle: 'circle', font: { size: 10 } } },
                        tooltip: { callbacks: { label: c => ' $' + c.parsed.toLocaleString() } }
                    }
                }
            });
        }
    </script>
</body>

