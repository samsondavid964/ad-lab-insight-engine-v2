    <script>
        // Initialize Lucide Icons
        lucide.createIcons();

        // Chart Global Defaults for Light Theme
        Chart.defaults.color = '#64748b'; // slate-500
        Chart.defaults.font.family = '"Plus Jakarta Sans", sans-serif';
        Chart.defaults.plugins.tooltip.backgroundColor = 'rgba(255, 255, 255, 0.95)';
        Chart.defaults.plugins.tooltip.titleColor = '#0f172a';
        Chart.defaults.plugins.tooltip.bodyColor = '#334155';
        Chart.defaults.plugins.tooltip.borderColor = 'rgba(0,0,0,0.1)';
        Chart.defaults.plugins.tooltip.borderWidth = 1;
        Chart.defaults.plugins.tooltip.padding = 12;
        Chart.defaults.plugins.tooltip.cornerRadius = 8;
        Chart.defaults.plugins.tooltip.displayColors = false;

        let chartsRendered = false;

        function animateNumbers() {
            document.querySelectorAll('.animate-number').forEach(el => {
                const val = parseFloat(el.getAttribute('data-val'));
                const prefix = el.getAttribute('data-prefix') || '';
                const decimals = parseInt(el.getAttribute('data-decimals') || 0);

                let current = 0;
                const duration = 1500; // ms
                const steps = 60;
                const stepTime = duration / steps;
                const increment = val / steps;

                const timer = setInterval(() => {
                    current += increment;
                    if (current >= val) {
                        current = val;
                        clearInterval(timer);
                    }
                    // Format with commas
                    let displayVal = current.toLocaleString('en-US', { minimumFractionDigits: decimals, maximumFractionDigits: decimals });
                    el.innerText = prefix + displayVal;
                }, stepTime);
            });
        }

        function switchTab(tabId) {
            // Hide all panels
            document.querySelectorAll('.tab-content').forEach(p => p.classList.remove('active'));
            // Remove active from all nav buttons
            document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));

            // Activate selected
            document.getElementById('panel-' + tabId).classList.add('active');
            event.currentTarget.classList.add('active');

            if (tabId === 'performance' && !chartsRendered) {
                renderCharts();
                chartsRendered = true;
            }
        }

        function renderCharts() {
            // 1. WoW Trend Chart (Grouped Bar)
            new Chart(document.getElementById('trendChart'), {
                type: 'bar',
                data: {
                    labels: ['Previous Week', 'Concluded Week'],
                    datasets: [
                        {
                            label: 'Spend',
                            data: [6269, 6479],
                            backgroundColor: '#4f46e5', // brand-600
                            borderRadius: 4,
                        },
                        {
                            label: 'Conversion Value',
                            data: [29258, 14105],
                            backgroundColor: '#10b981', // emerald-500
                            borderRadius: 4,
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { usePointStyle: false, boxWidth: 32, padding: 20 }
                        }
                    },
                    scales: {
                        x: {
                            grid: { display: false, drawBorder: false }
                        },
                        y: {
                            type: 'linear', display: true, position: 'left',
                            grid: { color: 'rgba(0,0,0,0.05)' },
                            ticks: { callback: v => '$' + v.toLocaleString() }
                        }
                    }
                }
            });

            // 2. Spend Chart (Doughnut)
            new Chart(document.getElementById('spendChart'), {
                type: 'doughnut',
                data: {
                    labels: ['PMax Campaigns', 'Search Campaigns', 'Other'],
                    datasets: [{
                        data: [17327, 248, 673],
                        backgroundColor: ['#6366f1', '#10b981', '#cbd5e1'], // brand, emerald, slate
                        borderWidth: 0,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '75%',
                    plugins: {
                        legend: { position: 'right', labels: { padding: 20, usePointStyle: true, pointStyle: 'circle' } },
                        tooltip: { callbacks: { label: c => ' $' + c.parsed.toLocaleString() } }
                    }
                }
            });

            // 3. ROAS Bar Chart (Horizontal)
            new Chart(document.getElementById('roasChart'), {
                type: 'bar',
                data: {
                    labels: [
                        'PMax | AE | Prospecting',
                        'PMax | SA/AE | Competitor',
                        'PMax | SA/AE | Remarketing',
                        'PMax | SA | Prospecting',
                        'Search | Brand | SA/AE'
                    ],
                    datasets: [{
                        label: 'ROAS',
                        data: [3.92, 1.71, 1.87, 1.95, 28.15],
                        backgroundColor: (ctx) => {
                            const val = ctx.raw;
                            if (val > 10) return '#10b981'; // Emerald for outlier
                            if (val > 3) return '#6366f1';  // Brand blue for good
                            return '#f43f5e';               // Rose for poor
                        },
                        borderRadius: 4,
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: {
                            grid: { color: 'rgba(0,0,0,0.05)', borderDash: [5, 5] },
                            ticks: { callback: v => v + 'x' }
                        },
                        y: { grid: { display: false } }
                    }
                }
            });

            // Render Table Data
            const campaigns = [
                { name: 'Ad-Lab | PMax | AE | Prospecting | MCV', spend: 6530.10, val: 25596.06, roas: 3.92 },
                { name: 'Ad-Lab | PMax | SA/AE | Competitor | MCV', spend: 5291.16, val: 9036.80, roas: 1.71 },
                { name: 'Ad-Lab | PMax | SA/AE | Remarketing | MCV', spend: 4318.68, val: 8059.80, roas: 1.87 },
                { name: 'Ad-Lab | PMax | SA | Prospecting | tROAS 3.7x', spend: 1118.47, val: 2182.46, roas: 1.95 },
                { name: 'Ad-Lab | Search | Brand | SA/AE | TIS', spend: 248.00, val: 6983.07, roas: 28.15 },
            ];

            const tbody = document.getElementById('campaignTableBody');
            campaigns.forEach(c => {
                let roasColor = c.roas > 10 ? 'text-emerald-600 font-bold' : (c.roas > 3 ? 'text-brand-600' : 'text-rose-600');
                tbody.innerHTML += `
          <tr class="hover:bg-slate-50 transition-colors">
            <td class="px-6 py-4 font-semibold text-slate-800">${c.name}</td>
            <td class="px-6 py-4 text-right font-mono text-slate-500">$${c.spend.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</td>
            <td class="px-6 py-4 text-right font-mono text-slate-500">$${c.val.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</td>
            <td class="px-6 py-4 text-right font-display text-lg ${roasColor}">${c.roas}x</td>
          </tr>
        `;
            });
        }

        // Trigger initial animations
        window.addEventListener('DOMContentLoaded', () => {
            // Small delay to let the UI paint first
            setTimeout(() => {
                // SVG Circle Animation
                const circle = document.getElementById('healthCircle');
                // Calculate offset for 68% progress on a dasharray of 264. 264 * (1 - 0.68) = 84.48
                circle.style.strokeDashoffset = '84.48';

                // Start number counting
                animateNumbers();
            }, 300);
        });

    </script>
</body>

</html>